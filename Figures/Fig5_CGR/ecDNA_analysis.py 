vaf_dist_trunk =  vaf_dist_trunk.loc[ :,vaf_dist_trunk.mean().sort_values(ascending=False).index]

vaf_dist = pd.concat([vaf_dist_trunk,vaf_dist_rest], axis=1)
                                     
fig, ax = plt.subplots(figsize=(20,5))
